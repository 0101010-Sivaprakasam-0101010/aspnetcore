@using Microsoft.AspNetCore.Components.Routing
    <CascadingValue Name="User" Value="Name">
        <Router AppAssembly="@typeof(MvcSandbox.Startup).Assembly">
            <Found Context="routeData">
                <RouteView RouteData="@routeData" DefaultLayout="@typeof(MvcSandbox.Components.Shared.MainLayout)" />
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(MvcSandbox.Components.Shared.MainLayout)">
                    <p>Sorry, there's nothing at this address.</p>
                </LayoutView>
            </NotFound>
        </Router>
    </CascadingValue>
@code{
    [Parameter] public string Name { get; set; }
}